<section class="profile">
  <a href="/profile" class="come-back">
    <div class="come-back__icon">
      <svg width="13" height="12" viewBox="0 0 13 12" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M3.66446 5.20005L13 5.20005V6.80005L3.66454 6.80005L6.62469 10.5002L5.37531 11.4998L1.37531 6.49976L0.9755 6L1.37531 5.50024L5.37531 0.500244L6.62469 1.49976L3.66446 5.20005Z" fill="white"/>
      </svg>
    </div>
  </a>
  <div class="profile__info">
    <div class="profile__img-box">
      <img src="{{img}}" alt="profile image">
    </div>
    <h2 class="profile__name">{{name}}</h2>
    <div class="auth__input-box mt-50">
      <div class="input">
        <input class="input__input" type="password" name="oldPassword" id="oldPassword" placeholder="Старый пароль">
        <label class="input__label" for="oldPassword">Старый пароль</label>
      </div>
      <p class="error">error</p>
    </div>
    <div class="auth__input-box">
      <div class="input">
        <input class="input__input" type="password" name="newPassword" id="newPassword" placeholder="Новый пароль">
        <label class="input__label" for="newPassword">Новый пароль</label>
      </div>
      <p class="error">error</p>
    </div>
    <div class="auth__input-box">
      <div class="input">
        <input class="input__input" type="password" name="repeatPassword" id="repeatPassword" placeholder="Новый пароль (еще раз)">
        <label class="input__label" for="repeatPassword">Новый пароль (еще раз)</label>
      </div>
      <p class="error">error</p>
    </div>
    <div class="profile__btns mt-20">
      <button class="button">{{btnText}}</button>
    </div>
  </div>
</section>
