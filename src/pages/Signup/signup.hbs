<section class="auth">
  <div class="auth__form">
    <h1 class="auth__title title">{{title}}</h1>
    <div class="auth__input-box mt-50">
      <div class="input">
        <input class="input__input" type="text" name="first_name" id="first_name" placeholder="Имя">
        <label class="input__label" for="first_name">Имя</label>
      </div>
      <p class="error">error</p>
    </div>
    <div class="auth__input-box">
      <div class="input">
        <input class="input__input" type="text" name="second_name" id="second_name" placeholder="Фамилия">
        <label class="input__label" for="second_name">Фамилия</label>
      </div>
      <p class="error">error</p>
    </div>
    <div class="auth__input-box">
      <div class="input">
        <input class="input__input" type="email" name="email" id="email" placeholder="Почта">
        <label class="input__label" for="email">Почта</label>
      </div>
      <p class="error">error</p>
    </div>
    <div class="auth__input-box">
      <div class="input">
        <input class="input__input" type="text" name="phone" id="phone" placeholder="Телефон">
        <label class="input__label" for="phone">Телефон</label>
      </div>
      <p class="error">error</p>
    </div>
    <div class="auth__input-box">
      <div class="input">
        <input class="input__input" type="text" name="login" id="login" placeholder="Логин">
        <label class="input__label" for="login">Логин</label>
      </div>
      <p class="error">error</p>
    </div>
    <div class="auth__input-box">
      <div class="input">
        <input class="input__input" type="password" name="password" id="password" placeholder="Пароль">
        <label class="input__label" for="password">Пароль</label>
      </div>
      <p class="error">error</p>
    </div>
    <div class="auth__input-box">
      <div class="input">
        <input class="input__input" type="password" name="repeatPassword" id="repeatPassword" placeholder="Пароль (еще раз)">
        <label class="input__label" for="repeatPassword">Пароль (еще раз)</label>
      </div>
      <p class="error">error</p>
    </div>
    <div class="auth__btns mt-50">
      <button class="button">{{btnText}}</button>
      <a href="/" class="sub-btn mt-20">{{linkText}}</a>
    </div>
  </div>
</section>
